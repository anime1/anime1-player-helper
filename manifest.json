{
	"name": "Anime1.me",
	"version": "1.1",
	"description": "Anime1.me 官方播放助手",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"*://*.anime1.me/*",
        "*://video.xx.fbcdn.net/*"
	],
    "externally_connectable": {
        "matches": ["*://localhost/*", "*://*.anime1.me/*"]
    },
	"manifest_version": 2
}
