{
    "name": "Anime1.me",
    "version": "1.3",
    "description": "Anime1.me 官方播放助手",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.anime1.me/*",
        "*://video.xx.fbcdn.net/*",
        "*://*.apps.fbsbx.com/*"
    ],
    "externally_connectable": {
        "matches": ["*://*.anime1.me/*"]
    },
    "manifest_version": 2
}